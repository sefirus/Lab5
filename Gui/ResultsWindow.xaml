<Window x:Class="Gui.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результати" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="ResultsListBox" Grid.Row="0" />

        <Button x:Name="OkButton" Grid.Row="1" Content="ОК" Width="100" Margin="0,10,0,0"
                HorizontalAlignment="Right" Click="OkButton_Click" />
    </Grid>
</Window>